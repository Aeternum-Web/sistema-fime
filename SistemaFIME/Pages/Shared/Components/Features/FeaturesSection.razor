@namespace SistemaFIME.Pages.Shared.Components.Features

<!-- Features Section -->
<section class="mb-20 sm:mb-32">
    <div class="text-center mb-12 sm:mb-20 px-4">
        <span class="inline-block px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold mb-4">
            <i class="bi bi-stars me-2"></i>Funcionalidades
        </span>
        <h2 class="text-2xl sm:text-4xl md:text-5xl font-black text-gray-900 mb-4 sm:mb-6">
            ¿Qué puedes hacer aquí?
        </h2>
        <p class="text-base sm:text-xl text-gray-600 max-w-3xl mx-auto">
            Descubre todas las herramientas que tenemos para potenciar tu experiencia universitaria
        </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 px-4">
        <FeatureCard 
            Icon="bi-question-circle"
            Title="Resolver Dudas"
            Description="Pregunta sobre materias, exámenes y profesores. La comunidad está aquí para ayudarte."
            GradientFrom="blue-500"
            GradientTo="indigo-600"
            BackgroundFrom="blue-50"
            BackgroundTo="indigo-50"
            TextColor="blue-600"
            HoverTextColor="blue-700" />

        <FeatureCard 
            Icon="bi-file-earmark-text"
            Title="Compartir Apuntes"
            Description="Sube y descarga apuntes, guías y recursos útiles para todas tus materias."
            GradientFrom="pink-500"
            GradientTo="rose-600"
            BackgroundFrom="pink-50"
            BackgroundTo="rose-50"
            TextColor="pink-600"
            HoverTextColor="pink-700" />

        <FeatureCard 
            Icon="bi-calendar-event"
            Title="Eventos y Talleres"
            Description="Mantente al día con eventos, talleres y actividades dentro y fuera de FIME."
            GradientFrom="amber-500"
            GradientTo="orange-600"
            BackgroundFrom="amber-50"
            BackgroundTo="orange-50"
            TextColor="amber-600"
            HoverTextColor="amber-700" />

        <FeatureCard 
            Icon="bi-people"
            Title="Comunidad"
            Description="Conecta con otros estudiantes, comparte experiencias y construye amistades duraderas."
            GradientFrom="emerald-500"
            GradientTo="teal-600"
            BackgroundFrom="emerald-50"
            BackgroundTo="teal-50"
            TextColor="emerald-600"
            HoverTextColor="emerald-700" />
    </div>
</section>