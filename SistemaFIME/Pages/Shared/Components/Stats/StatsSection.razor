@namespace SistemaFIME.Pages.Shared.Components.Stats

<!-- Stats Section -->
<section class="mb-12 sm:mb-20">
    <div class="text-center mb-12 sm:mb-16 px-4">
        <span class="inline-block px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-semibold mb-4">
            <i class="bi bi-bar-chart me-2"></i>Estadísticas
        </span>
        <h2 class="text-2xl sm:text-4xl md:text-5xl font-black text-gray-900 mb-4 sm:mb-6">
            Nuestra comunidad en números
        </h2>
        <p class="text-base sm:text-xl text-gray-600 max-w-3xl mx-auto">
            Datos en tiempo real de nuestra plataforma
        </p>
    </div>
    
    <div class="bg-gradient-to-br from-white to-gray-50 rounded-3xl p-8 sm:p-12 shadow-2xl border border-gray-100 mx-4">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-12 text-center">
            @foreach (var stat in Stats)
            {
                <StatsCard Value="@stat.Value" Label="@stat.Label" />
            }
        </div>
    </div>
</section>

@code {
    [Parameter] public List<StatItem> Stats { get; set; } = new();

    public class StatItem
    {
        public string Value { get; set; } = "";
        public string Label { get; set; } = "";
    }
}