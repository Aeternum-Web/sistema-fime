@* Dashboard Stats Card Component *@
<div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
    <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <div class="w-16 h-16 bg-gradient-to-br @BackgroundGradient rounded-xl flex items-center justify-center shadow-md">
                <i class="@IconClass text-2xl text-white"></i>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">@Title</h3>
                <p class="text-3xl font-bold @TextColor mt-1">@Value</p>
                <span class="text-xs text-gray-400 mt-1">@Subtitle</span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string Subtitle { get; set; } = "";
    [Parameter] public string IconClass { get; set; } = "";
    [Parameter] public string BackgroundGradient { get; set; } = "from-blue-500 to-blue-600";
    [Parameter] public string TextColor { get; set; } = "text-blue-600";
}