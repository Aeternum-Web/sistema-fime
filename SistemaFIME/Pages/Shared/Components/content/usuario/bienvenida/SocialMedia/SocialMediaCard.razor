@namespace SistemaFIME.Pages.Shared.Components.content.SocialMedia

<a href="@Url" class="group relative bg-white rounded-3xl p-6 sm:p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 text-center">
    <div class="absolute inset-0 bg-gradient-to-br from-@(BackgroundFrom) to-@(BackgroundTo) rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    <div class="relative z-10">
        <div class="w-16 h-16 sm:w-20 sm:h-20 @GetGradientClass() rounded-3xl flex items-center justify-center mx-auto mb-4 sm:mb-6 group-hover:scale-110 transition-transform duration-300">
            <i class="bi @Icon text-white text-2xl sm:text-3xl"></i>
        </div>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2 sm:mb-3">@Title</h3>
        <p class="text-gray-600 mb-4 sm:mb-6 text-sm sm:text-base">@Description</p>
        <div class="inline-flex items-center text-@(TextColor) font-semibold group-hover:text-@(HoverTextColor) text-sm sm:text-base">
            <span>@ActionText <i class="bi bi-arrow-right ms-1"></i></span>
        </div>
    </div>
</a>

@code {
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string GradientFrom { get; set; } = "";
    [Parameter] public string GradientTo { get; set; } = "";
    [Parameter] public string BackgroundFrom { get; set; } = "";
    [Parameter] public string BackgroundTo { get; set; } = "";
    [Parameter] public string TextColor { get; set; } = "";
    [Parameter] public string HoverTextColor { get; set; } = "";
    [Parameter] public string ActionText { get; set; } = "";
    [Parameter] public string Url { get; set; } = "#";
    [Parameter] public bool IsGradientSpecial { get; set; } = false;

    private string GetGradientClass()
    {
        if (IsGradientSpecial && Title == "Instagram")
        {
            return "bg-gradient-to-br from-pink-500 via-red-500 to-yellow-500";
        }
        return $"bg-gradient-to-br from-{GradientFrom} to-{GradientTo}";
    }
}