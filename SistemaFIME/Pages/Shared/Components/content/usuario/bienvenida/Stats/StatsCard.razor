@namespace SistemaFIME.Pages.Shared.Components.content.Stats

<div class="group">
    <div class="w-16 h-16 sm:w-20 sm:h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-3xl flex items-center justify-center mx-auto mb-4 sm:mb-6 group-hover:scale-110 transition-transform duration-300">
        <i class="bi bi-graph-up text-white text-2xl sm:text-3xl"></i>
    </div>
    <div class="text-3xl sm:text-5xl font-black bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2 sm:mb-3 group-hover:scale-105 transition-transform duration-200">@Value</div>
    <div class="text-gray-600 text-sm sm:text-lg font-semibold uppercase tracking-wide">@Label</div>
</div>

@code {
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string Label { get; set; } = "";
}