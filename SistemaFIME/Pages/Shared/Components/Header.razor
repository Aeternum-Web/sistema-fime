@namespace SistemaFIME.Pages.Shared.Components

<header class="bg-white shadow-md fixed top-0 w-full z-10">
    <div class="container mx-auto px-4 py-3 flex items-center justify-between">
        <button class="lg:hidden flex flex-col space-y-1 p-2 rounded hover:bg-gray-100" @onclick="ToggleMenu" title="Abrir menú">
            <span class="w-6 h-0.5 bg-gray-800"></span>
            <span class="w-6 h-0.5 bg-gray-800"></span>
            <span class="w-6 h-0.5 bg-gray-800"></span>
        </button>
        
        <div class="flex flex-col">
            <h1 class="text-xl font-bold text-gray-800">SistemaFIME</h1>
            <span class="text-sm text-gray-600">Sistema de Gestión</span>
        </div>
        
        <div class="flex items-center space-x-4">
            <button class="p-2 rounded-full hover:bg-gray-100" title="Notificaciones">
                <i class="bi bi-bell"></i>
            </button>
            <button class="p-2 rounded-full hover:bg-gray-100" title="Perfil">
                <i class="bi bi-person"></i>
            </button>
        </div>
    </div>
</header>

@code {
    [Parameter] public EventCallback OnMenuToggle { get; set; }

    private async Task ToggleMenu()
    {
        await OnMenuToggle.InvokeAsync();
    }
}