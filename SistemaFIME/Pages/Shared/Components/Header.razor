@namespace SistemaFIME.Pages.Shared.Components

<header class="bg-white shadow">
    <div class="container mx-auto px-4 py-3 flex flex-wrap items-center justify-between">
        <button class="flex flex-col justify-center items-center w-10 h-10 rounded hover:bg-gray-100" @onclick="ToggleMenu" title="Abrir menú">
    <i class="bi bi-list"></i>
</button>
        
        <div class="flex flex-col text-center mx-auto lg:mx-0">
            <h1 class="text-xl sm:text-2xl font-bold text-gray-800">SistemaFIME</h1>
            <span class="text-sm sm:text-base text-gray-500">Sistema de Gestión</span>
        </div>
        
        <div class="flex space-x-2 ml-auto lg:ml-0">
            <button class="p-2 rounded-full hover:bg-gray-100" title="Notificaciones">
                <i class="bi bi-bell"></i>
            </button>
            <button class="p-2 rounded-full hover:bg-gray-100" title="Perfil">
                <i class="bi bi-person"></i>
            </button>
        </div>
    </div>
</header>

@code {
    [Parameter] public EventCallback OnMenuToggle { get; set; }

    private async Task ToggleMenu()
    {
        await OnMenuToggle.InvokeAsync();
    }
}