@inherits LayoutComponentBase
@namespace SistemaFIME.Pages.Shared
@using SistemaFIME.Pages.Shared.Components
@using SistemaFIME.Pages.Shared.Components.Menus

<div class="app-layout">
    <Header OnMenuToggle="ToggleNavbar" />
    
    <MenuGuest IsOpen="isNavbarOpen" OnClose="CloseNavbar" />
    
    <main class="main-content @(isNavbarOpen ? "content-shifted" : "")">
        <div class="content-wrapper">
            @Body
        </div>
    </main>
    
    <Footer />
</div>

@code {
    private bool isNavbarOpen = false;

    private void ToggleNavbar()
    {
        isNavbarOpen = !isNavbarOpen;
    }

    private void CloseNavbar()
    {
        isNavbarOpen = false;
    }
}