@page "/"
@layout null

<PageTitle>Inicio - Comunidad Estudiantil FIME</PageTitle>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio - Comunidad Estudiantil FIME</title>
    <base href="~/" />
    <!-- CSS Files - Tailwind should be last to have priority -->
    <link href="~/css/tailwind.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>

<!-- Hero Section -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900 via-purple-900 to-indigo-900"></div>
    <div class="absolute inset-0 bg-black/20"></div>
    
    <!-- Animated background elements -->
    <div class="absolute top-10 left-10 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-10 right-10 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
    
    <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
        <div class="mb-8">
            <span class="inline-block px-6 py-2 bg-blue-500/20 backdrop-blur-sm rounded-full text-blue-200 text-sm font-medium border border-blue-400/30 mb-6">
                🎓 Comunidad Estudiantil Oficial
            </span>
        </div>
        
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-black text-white mb-8 leading-tight">
            <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
                FIME
            </span>
            <br />
            <span class="text-white">Comunidad</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
            El espacio digital donde los estudiantes de FIME se conectan, colaboran y crecen juntos. 
            <span class="text-blue-400 font-semibold">Comparte conocimiento, resuelve dudas y construye tu red profesional.</span>
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <button class="group relative px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl text-white font-bold text-lg shadow-2xl hover:shadow-blue-500/25 transition-all duration-300 hover:scale-105">
                <span class="relative z-10">Explorar Comunidad</span>
                <div class="absolute inset-0 bg-gradient-to-r from-blue-700 to-purple-700 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </button>
            
            <button class="px-8 py-4 border-2 border-white/30 rounded-2xl text-white font-bold text-lg backdrop-blur-sm hover:bg-white/10 transition-all duration-300 hover:scale-105">
                Ver Estadísticas
            </button>
        </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-white rounded-full mt-2 animate-pulse"></div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-6 py-20">

        <!-- Features Section -->
        <section class="mb-32">
            <div class="text-center mb-20">
                <span class="inline-block px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold mb-4">
                    ✨ Funcionalidades
                </span>
                <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
                    ¿Qué puedes hacer aquí?
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Descubre todas las herramientas que tenemos para potenciar tu experiencia universitaria
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Card 1: Resolver dudas -->
                <div class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">Resolver Dudas</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            Pregunta sobre materias, exámenes y profesores. La comunidad está aquí para ayudarte.
                        </p>
                        <div class="mt-6 flex items-center text-blue-600 text-sm font-medium group-hover:text-blue-700">
                            <span>Explorar →</span>
                        </div>
                    </div>
                </div>

                <!-- Card 2: Compartir apuntes -->
                <div class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
                    <div class="absolute inset-0 bg-gradient-to-br from-pink-50 to-rose-50 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="w-16 h-16 bg-gradient-to-br from-pink-500 to-rose-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">Compartir Apuntes</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            Sube y descarga apuntes, guías y recursos útiles para todas tus materias.
                        </p>
                        <div class="mt-6 flex items-center text-pink-600 text-sm font-medium group-hover:text-pink-700">
                            <span>Explorar →</span>
                        </div>
                    </div>
                </div>

                <!-- Card 3: Eventos y talleres -->
                <div class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
                    <div class="absolute inset-0 bg-gradient-to-br from-amber-50 to-orange-50 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-orange-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">Eventos y Talleres</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            Mantente al día con eventos, talleres y actividades dentro y fuera de FIME.
                        </p>
                        <div class="mt-6 flex items-center text-amber-600 text-sm font-medium group-hover:text-amber-700">
                            <span>Explorar →</span>
                        </div>
                    </div>
                </div>

                <!-- Card 4: Comunidad -->
                <div class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
                    <div class="absolute inset-0 bg-gradient-to-br from-emerald-50 to-teal-50 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">Comunidad</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            Conecta con otros estudiantes, comparte experiencias y construye amistades duraderas.
                        </p>
                        <div class="mt-6 flex items-center text-emerald-600 text-sm font-medium group-hover:text-emerald-700">
                            <span>Explorar →</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section class="mb-32">
            <div class="text-center mb-20">
                <span class="inline-block px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-semibold mb-4">
                    💬 Testimonios
                </span>
                <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
                    Lo que dice nuestra comunidad
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Historias reales de estudiantes que han encontrado su lugar en FIME
                </p>
            </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            <div class="bg-white rounded-2xl shadow-xl p-8 flex flex-col items-center border-t-4 border-blue-400 hover:shadow-2xl transition-shadow duration-200">
                <img src="https://ui-avatars.com/api/?name=Ana+López&background=3b82f6&color=fff&size=96" alt="Ana López" class="rounded-full w-24 h-24 mb-4 shadow-lg border-4 border-blue-200" />
                <p class="text-gray-800 italic text-center mb-3">“Gracias a la comunidad resolví mi duda de Cálculo en minutos.”</p>
                <span class="text-blue-700 font-semibold flex items-center gap-2"><i class="bi bi-person-circle"></i> Ana López</span>
            </div>
            <div class="bg-white rounded-2xl shadow-xl p-8 flex flex-col items-center border-t-4 border-green-400 hover:shadow-2xl transition-shadow duration-200">
                <img src="https://ui-avatars.com/api/?name=Pedro+Martinez&background=16a34a&color=fff&size=96" alt="Pedro Martinez" class="rounded-full w-24 h-24 mb-4 shadow-lg border-4 border-green-200" />
                <p class="text-gray-800 italic text-center mb-3">“Compartí mis apuntes y ahora tengo nuevos amigos.”</p>
                <span class="text-green-700 font-semibold flex items-center gap-2"><i class="bi bi-person-circle"></i> Pedro Martínez</span>
            </div>
            <div class="bg-white rounded-2xl shadow-xl p-8 flex flex-col items-center border-t-4 border-yellow-400 hover:shadow-2xl transition-shadow duration-200">
                <img src="https://ui-avatars.com/api/?name=Karla+Reyes&background=fbbf24&color=fff&size=96" alt="Karla Reyes" class="rounded-full w-24 h-24 mb-4 shadow-lg border-4 border-yellow-200" />
                <p class="text-gray-800 italic text-center mb-3">“¡Los eventos publicados aquí son lo mejor de FIME!”</p>
                <span class="text-yellow-700 font-semibold flex items-center gap-2"><i class="bi bi-person-circle"></i> Karla Reyes</span>
            </div>
        </div>
    </section>

        <!-- Social Media Section -->
        <section class="mb-32">
            <div class="text-center mb-16">
                <span class="inline-block px-4 py-2 bg-gradient-to-r from-pink-100 to-purple-100 text-purple-800 rounded-full text-sm font-semibold mb-4">
                    🌐 Redes Sociales
                </span>
                <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
                    ¡Conecta con nosotros!
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Síguenos en nuestras redes sociales para estar al día con las últimas noticias, eventos y contenido exclusivo
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
                <!-- Facebook -->
                <a href="#" class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 text-center">
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="w-20 h-20 bg-gradient-to-br from-blue-600 to-blue-700 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">Facebook</h3>
                        <p class="text-gray-600 mb-6">Únete a nuestra comunidad en Facebook para compartir experiencias y mantenerte conectado</p>
                        <div class="inline-flex items-center text-blue-600 font-semibold group-hover:text-blue-700">
                            <span>Seguir →</span>
                        </div>
                    </div>
                </a>

                <!-- Instagram -->
                <a href="#" class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 text-center">
                    <div class="absolute inset-0 bg-gradient-to-br from-pink-50 to-rose-50 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="w-20 h-20 bg-gradient-to-br from-pink-500 via-red-500 to-yellow-500 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12.017 0C8.396 0 7.989.016 6.756.072 5.526.127 4.718.302 4.019.57c-.723.282-1.262.633-1.84 1.211C1.601 2.359 1.25 2.898.968 3.621.7 4.32.525 5.128.47 6.358.415 7.591.4 7.998.4 11.619c0 3.621.015 4.028.071 5.261.055 1.23.23 2.038.498 2.737.282.723.633 1.262 1.211 1.84.578.578 1.117.929 1.84 1.211.699.268 1.507.443 2.737.498 1.233.056 1.64.071 5.261.071 3.621 0 4.028-.015 5.261-.071 1.23-.055 2.038-.23 2.737-.498.723-.282 1.262-.633 1.84-1.211.578-.578.929-1.117 1.211-1.84.268-.699.443-1.507.498-2.737.056-1.233.071-1.64.071-5.261 0-3.621-.015-4.028-.071-5.261-.055-1.23-.23-2.038-.498-2.737-.282-.723-.633-1.262-1.211-1.84C19.098 1.601 18.559 1.25 17.836.968 17.137.7 16.329.525 15.099.47 13.866.415 13.459.4 9.838.4c-3.621 0-4.028.015-5.261.071C3.347.525 2.539.7 1.84.968.968 1.25.578 1.601 0 2.179v0C-.578 2.757-.929 3.296-1.211 4.019c-.268.699-.443 1.507-.498 2.737C-1.765 7.989-1.78 8.396-1.78 12.017c0 3.621.015 4.028.071 5.261.055 1.23.23 2.038.498 2.737.282.723.633 1.262 1.211 1.84.578.578 1.117.929 1.84 1.211.699.268 1.507.443 2.737.498 1.233.056 1.64.071 5.261.071 3.621 0 4.028-.015 5.261-.071 1.23-.055 2.038-.23 2.737-.498.723-.282 1.262-.633 1.84-1.211.578-.578.929-1.117 1.211-1.84.268-.699.443-1.507.498-2.737.056-1.233.071-1.64.071-5.261 0-3.621-.015-4.028-.071-5.261-.055-1.23-.23-2.038-.498-2.737-.282-.723-.633-1.262-1.211-1.84C19.098 1.601 18.559 1.25 17.836.968 17.137.7 16.329.525 15.099.47 13.866.415 13.459.4 9.838.4zm2.179 5.4c3.621 0 6.581 2.96 6.581 6.581S15.638 18.962 12.017 18.962 5.436 16.002 5.436 12.381 8.396 5.8 12.017 5.8zM12.017 16c2.209 0 4-1.791 4-4s-1.791-4-4-4-4 1.791-4 4 1.791 4 4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">Instagram</h3>
                        <p class="text-gray-600 mb-6">Descubre contenido visual, historias y momentos especiales de nuestra comunidad</p>
                        <div class="inline-flex items-center text-pink-600 font-semibold group-hover:text-pink-700">
                            <span>Seguir →</span>
                        </div>
                    </div>
                </a>

                <!-- Telegram -->
                <a href="#" class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 text-center">
                    <div class="absolute inset-0 bg-gradient-to-br from-sky-50 to-blue-50 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="w-20 h-20 bg-gradient-to-br from-sky-500 to-blue-600 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">Telegram</h3>
                        <p class="text-gray-600 mb-6">Únete a nuestro canal de Telegram para recibir notificaciones instantáneas</p>
                        <div class="inline-flex items-center text-sky-600 font-semibold group-hover:text-sky-700">
                            <span>Unirse →</span>
                        </div>
                    </div>
                </a>
            </div>
            
            <!-- Call to action -->
            <div class="text-center bg-gradient-to-r from-blue-600 to-purple-600 rounded-3xl p-12 text-white">
                <h3 class="text-3xl font-bold mb-4">¡Comparte, pregunta y haz comunidad!</h3>
                <p class="text-xl opacity-90 mb-6">Forma parte de la red de estudiantes más activa de FIME</p>
                <div class="flex flex-wrap justify-center gap-4 text-lg">
                    <span class="bg-white/20 px-4 py-2 rounded-full">#OrgulloFIME</span>
                    <span class="bg-white/20 px-4 py-2 rounded-full">#ComunidadEstudiantil</span>
                    <span class="bg-white/20 px-4 py-2 rounded-full">#UANL</span>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="mb-20">
            <div class="text-center mb-16">
                <span class="inline-block px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-semibold mb-4">
                    📊 Estadísticas
                </span>
                <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
                    Nuestra comunidad en números
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Datos en tiempo real de nuestra plataforma
                </p>
            </div>
            
            <div class="bg-gradient-to-br from-white to-gray-50 rounded-3xl p-12 shadow-2xl border border-gray-100">
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-12 text-center">
                    @foreach (var stat in stats)
                    {
                        <div class="group">
                            <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                            </div>
                            <div class="text-5xl font-black bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-3 group-hover:scale-105 transition-transform duration-200">@stat.Value</div>
                            <div class="text-gray-600 text-lg font-semibold uppercase tracking-wide">@stat.Label</div>
