@page "/"
@page "/home"

<PageTitle>Inicio - Comunidad Estudiantil FIME</PageTitle>

<HeroSection />

<!-- Main Content -->
<div class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 sm:py-20">
        <FeaturesSection />
        <TestimonialsSection />
        <SocialMediaSection />
        <StatsSection Stats="@stats" />
    </div>
</div>

@code {
    private DateTime connectionTime = DateTime.Now;
    private List<StatsSection.StatItem> stats = new();

    protected override void OnInitialized()
    {
        connectionTime = DateTime.Now;
        stats = new List<StatsSection.StatItem>
        {
            new StatsSection.StatItem { Value = DateTime.Now.Year.ToString(), Label = "Año actual" },
            new StatsSection.StatItem { Value = connectionTime.ToString("HH:mm"), Label = "Hora del servidor" },
            new StatsSection.StatItem { Value = "v1.0", Label = "Versión" }
        };
    }
}