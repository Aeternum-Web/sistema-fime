@page "/"

<PageTitle>Inicio - Comunidad Estudiantil FIME</PageTitle>

<div class="max-w-6xl mx-auto px-4 py-16">
    <!-- HERO con imagen y overlay -->
    <div class="relative rounded-3xl overflow-hidden mb-16 shadow-2xl">
        <img src="https://images.unsplash.com/photo-1513258496099-48168024aec0?auto=format&fit=crop&w=1200&q=80" alt="Universidad" class="w-full h-72 md:h-96 object-cover brightness-75" />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        <div class="absolute inset-0 flex flex-col justify-center items-center text-white px-4">
            <h1 class="text-4xl md:text-6xl font-black mb-4 animate-pulse drop-shadow-xl tracking-tight">¡Bienvenido a la Comunidad Estudiantil FIME!</h1>
            <p class="text-lg md:text-2xl font-medium opacity-95 mb-2 max-w-2xl mx-auto leading-relaxed drop-shadow-lg">
                Un espacio hecho por y para estudiantes: comparte, aprende, pregunta y haz amigos en FIME.
            </p>
        </div>
    </div>

    <!-- ¿Qué puedes hacer aquí? -->
    <section class="mb-20">
        <h2 class="text-3xl md:text-4xl font-extrabold text-blue-800 mb-10 text-center tracking-tight">¿Qué puedes hacer aquí?</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <div class="bg-gradient-to-br from-blue-100 via-blue-50 to-white rounded-2xl shadow-xl p-10 flex flex-col items-center hover:scale-[1.04] hover:shadow-2xl transition-all duration-200 group">
                <i class="bi bi-question-circle-fill text-blue-500 text-5xl mb-5 animate-bounce group-hover:scale-110 transition-transform"></i>
                <h3 class="font-bold text-2xl mb-2 text-blue-900">Resolver dudas</h3>
                <p class="text-gray-700 text-center">Pregunta sobre materias, exámenes, profesores y recibe ayuda de la comunidad.</p>
            </div>
            <div class="bg-gradient-to-br from-pink-100 via-pink-50 to-white rounded-2xl shadow-xl p-10 flex flex-col items-center hover:scale-[1.04] hover:shadow-2xl transition-all duration-200 group">
                <i class="bi bi-journal-text text-pink-500 text-5xl mb-5 animate-bounce group-hover:scale-110 transition-transform"></i>
                <h3 class="font-bold text-2xl mb-2 text-pink-900">Compartir apuntes</h3>
                <p class="text-gray-700 text-center">Sube y descarga apuntes, guías y recursos útiles para tus materias.</p>
            </div>
            <div class="bg-gradient-to-br from-yellow-100 via-yellow-50 to-white rounded-2xl shadow-xl p-10 flex flex-col items-center hover:scale-[1.04] hover:shadow-2xl transition-all duration-200 group">
                <i class="bi bi-calendar-event text-yellow-500 text-5xl mb-5 animate-bounce group-hover:scale-110 transition-transform"></i>
                <h3 class="font-bold text-2xl mb-2 text-yellow-900">Eventos y talleres</h3>
                <p class="text-gray-700 text-center">Infórmate sobre eventos, talleres y actividades dentro y fuera de la facultad.</p>
            </div>
            <div class="bg-gradient-to-br from-green-100 via-green-50 to-white rounded-2xl shadow-xl p-10 flex flex-col items-center hover:scale-[1.04] hover:shadow-2xl transition-all duration-200 group">
                <i class="bi bi-emoji-laughing text-green-500 text-5xl mb-5 animate-bounce group-hover:scale-110 transition-transform"></i>
                <h3 class="font-bold text-2xl mb-2 text-green-900">Memes y comunidad</h3>
                <p class="text-gray-700 text-center">Disfruta de memes, historias y haz nuevos amigos en un ambiente sano.</p>
            </div>
        </div>
    </section>

    <!-- Testimonios -->
    <section class="mb-20">
        <h2 class="text-3xl md:text-4xl font-extrabold text-blue-800 mb-10 text-center tracking-tight">Testimonios de la comunidad</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            <div class="bg-white rounded-2xl shadow-xl p-8 flex flex-col items-center border-t-4 border-blue-400 hover:shadow-2xl transition-shadow duration-200">
                <img src="https://ui-avatars.com/api/?name=Ana+López&background=3b82f6&color=fff&size=96" alt="Ana López" class="rounded-full w-24 h-24 mb-4 shadow-lg border-4 border-blue-200" />
                <p class="text-gray-800 italic text-center mb-3">“Gracias a la comunidad resolví mi duda de Cálculo en minutos.”</p>
                <span class="text-blue-700 font-semibold flex items-center gap-2"><i class="bi bi-person-circle"></i> Ana López</span>
            </div>
            <div class="bg-white rounded-2xl shadow-xl p-8 flex flex-col items-center border-t-4 border-green-400 hover:shadow-2xl transition-shadow duration-200">
                <img src="https://ui-avatars.com/api/?name=Pedro+Martinez&background=16a34a&color=fff&size=96" alt="Pedro Martinez" class="rounded-full w-24 h-24 mb-4 shadow-lg border-4 border-green-200" />
                <p class="text-gray-800 italic text-center mb-3">“Compartí mis apuntes y ahora tengo nuevos amigos.”</p>
                <span class="text-green-700 font-semibold flex items-center gap-2"><i class="bi bi-person-circle"></i> Pedro Martínez</span>
            </div>
            <div class="bg-white rounded-2xl shadow-xl p-8 flex flex-col items-center border-t-4 border-yellow-400 hover:shadow-2xl transition-shadow duration-200">
                <img src="https://ui-avatars.com/api/?name=Karla+Reyes&background=fbbf24&color=fff&size=96" alt="Karla Reyes" class="rounded-full w-24 h-24 mb-4 shadow-lg border-4 border-yellow-200" />
                <p class="text-gray-800 italic text-center mb-3">“¡Los eventos publicados aquí son lo mejor de FIME!”</p>
                <span class="text-yellow-700 font-semibold flex items-center gap-2"><i class="bi bi-person-circle"></i> Karla Reyes</span>
            </div>
        </div>
    </section>

    <!-- Redes sociales -->
    <section class="text-center mb-20">
        <h2 class="text-2xl font-bold text-blue-800 mb-6">¡Síguenos en redes sociales!</h2>
        <div class="flex flex-col sm:flex-row justify-center gap-8 mt-6">
            <a href="#" class="flex items-center justify-center gap-3 px-10 py-4 rounded-xl bg-blue-600 hover:bg-blue-800 text-white font-bold text-xl shadow-lg transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-blue-300">
                <i class="bi bi-facebook text-2xl"></i> Facebook
            </a>
            <a href="#" class="flex items-center justify-center gap-3 px-10 py-4 rounded-xl bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 hover:from-pink-600 hover:to-yellow-600 text-white font-bold text-xl shadow-lg transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-pink-200">
                <i class="bi bi-instagram text-2xl"></i> Instagram
            </a>
            <a href="#" class="flex items-center justify-center gap-3 px-10 py-4 rounded-xl bg-sky-400 hover:bg-sky-600 text-white font-bold text-xl shadow-lg transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-sky-200">
                <i class="bi bi-telegram text-2xl"></i> Telegram
            </a>
        </div>
        <div class="mt-10 flex flex-col items-center">
            <span class="text-blue-800 text-xl font-semibold mb-2">¡Comparte, pregunta y haz comunidad!</span>
            <span class="text-blue-400 text-base">#OrgulloFIME #ComunidadEstudiantil</span>
        </div>
    </section>

    <!-- Stats -->
    <section class="bg-white rounded-3xl p-10 shadow-2xl">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-10 text-center">
            @foreach (var stat in stats)
            {
                <div class="group">
                    <div class="text-4xl font-black text-blue-700 mb-2 group-hover:text-blue-900 transition-colors duration-200">@stat.Value</div>
                    <div class="text-gray-500 text-sm font-medium uppercase tracking-widest">@stat.Label</div>
                </div>
            }
        </div>
    </section>
</div>

@code {
    private DateTime connectionTime = DateTime.Now;

    private List<StatItem> stats = new();

    protected override void OnInitialized()
    {
        connectionTime = DateTime.Now;
        stats = new List<StatItem>
        {
            new StatItem { Value = DateTime.Now.Year.ToString(), Label = "Año actual" },
            new StatItem { Value = connectionTime.ToString("HH:mm"), Label = "Hora del servidor" },
            new StatItem { Value = "v1.0", Label = "Versión" }
        };
    }

    public class StatItem
    {
        public string Value { get; set; } = "";
        public string Label { get; set; } = "";
    }
}