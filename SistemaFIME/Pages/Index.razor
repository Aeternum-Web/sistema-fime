@page "/"
@page "/home"
@using SistemaFIME.Pages.Shared.Components.Hero
@using SistemaFIME.Pages.Shared.Components.Features
@using SistemaFIME.Pages.Shared.Components.Testimonials
@using SistemaFIME.Pages.Shared.Components.SocialMedia
@using StatsComponent = SistemaFIME.Pages.Shared.Components.Stats.StatsSection

<PageTitle>Inicio - Comunidad Estudiantil FIME</PageTitle>

<HeroSection />

<!-- Main Content -->
<div class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 sm:py-20">
        <FeaturesSection />
        <TestimonialsSection />
        <SocialMediaSection />
        <StatsComponent Stats="@stats" />
    </div>
</div>

@code {
    private DateTime connectionTime = DateTime.Now;
    private List<StatsComponent.StatItem> stats = new();

    protected override void OnInitialized()
    {
        connectionTime = DateTime.Now;
        stats = new List<StatsComponent.StatItem>
        {
            new StatsComponent.StatItem { Value = DateTime.Now.Year.ToString(), Label = "Año actual" },
            new StatsComponent.StatItem { Value = connectionTime.ToString("HH:mm"), Label = "Hora del servidor" },
            new StatsComponent.StatItem { Value = "v1.0", Label = "Versión" }
        };
    }
}